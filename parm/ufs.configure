#############################################
####  UFS Run-Time Configuration File  #####
#############################################

# ESMF #
logKindFlag:            {{ logKindFlag }}
globalResourceControl:  true

# EARTH #
EARTH_component_list: {{ EARTH_cl }}
EARTH_attributes::
  Verbosity = 0
::

# ATM #
ATM_model:                      fv3
ATM_petlist_bounds:             {{ ATM_pb }}{{
ATM_omp_num_threads_line }}
ATM_attributes::
  Verbosity = 0{{
ATM_diag_line }}
::

{% if cpl_aqm  %}
# AQM #
AQM_model:                      aqm
AQM_petlist_bounds:             -1 -1
AQM_attributes::
  Verbosity = 0
  Diagnostic = 0
::
{% endif %}
{% if ufs_fire %}
# FIRE #
FIRE_model:                     fire_behavior
FIRE_petlist_bounds:            {{ FIRE_pb }}
FIRE_attributes::
  Verbosity = high
  Diagnostic = 0
::
{% endif %}

# Run Sequence #
runSeq::
{% for line in runseq -%}
{{ line }}
{%- endfor %}
::

